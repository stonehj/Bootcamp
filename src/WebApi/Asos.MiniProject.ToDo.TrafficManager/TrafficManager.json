{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "trafficManagerName": {
      "defaultValue": "asbc-tm-todo-gbl-teamname",
      "type": "string"
    },
    "endpointName": {
      "defaultValue": "asbc-as-todo-gbl-teamname",
      "type": "string"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Network/trafficManagerProfiles",
      "name": "[toLower(parameters('trafficManagerName'))]",
      "apiVersion": "2017-05-01",
      "location": "global",
      "tags": {
        "platform": "emergenttalent2017"
      },
      "scale": null,
      "properties": {
        "profileStatus": "Enabled",
        "trafficRoutingMethod": "Performance",
        "dnsConfig": {
          "relativeName": "[toLower(parameters('trafficManagerName'))]",
          "fqdn": "[concat(toLower(parameters('trafficManagerName')),'.trafficmanager.net')]",
          "ttl": 30
        },
        "monitorConfig": {
          "protocol": "HTTP",
          "port": 80,
          "path": "/",
          "intervalInSeconds": 30,
          "toleratedNumberOfFailures": 3,
          "timeoutInSeconds": 10
        },
        "endpoints": [
          {
            "name": "asbc-as-todo-eun-teamname",
            "type": "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
            "properties": {
              "endpointStatus": "Enabled",
              "targetResourceId": "[resourceId('Microsoft.Web/sites', toLower(parameters('endpointName')))]",
              "target": "[concat(toLower(parameters('endpointName')),'.azurewebsites.net')]",
              "weight": 1,
              "priority": 1,
              "endpointLocation": "North Europe"
            }
          }
        ]
      },
      "dependsOn": []
    }
  ]
}